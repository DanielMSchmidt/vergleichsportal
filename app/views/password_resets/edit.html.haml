-content_for :head do
  %h3 Choose a new password


= simple_form_for(@user, :url => password_reset_path(@user), :html => {:method => :put}) do |f|
  = f.error_notification
  .field
    = f.label :email
    %br/
    = @user.email
  .field
    = f.input :password
  .field
    = f.input :password_confirmation
    = hidden_field_tag :token, @token
  .actions
    = f.submit :class => "button"

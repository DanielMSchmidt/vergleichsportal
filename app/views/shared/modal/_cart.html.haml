      -if has_permission?("switch_cart")
        = link_to (t "carts.new_cart"), add_new_path, remote: true, :class => "button expand"
    .three.columns.offset-by-one
      -if has_permission?("switch_cart")
        %a.button.expand{"data-reveal-id" => "switch-cart-modal", :href => "#"} 
          =t "shared.change_delete_cart"  
    .three.columns.offset-by-one
      -if has_permission?("compare_cart")

        = link_to (t "shared.compare_provider"), track_compare_path ,remote: true, :class => "button expand", "data-reveal-id" => "compare-cart-modal"

.reveal-modal.medium{:id => "add-advertisment-modal"}
  = simple_form_for(@advertisment, remote: true) do |f|
    = f.error_notification

    .form-inputs
      = f.input :img_url
      = f.input :link_url
      = f.hidden_field :active, true

    .form-actions
      = f.button :submit

  %a.close-reveal-modal &#215
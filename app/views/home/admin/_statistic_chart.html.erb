<script>
  <% statistics = getCompleteStatistics %>
  <% colors = {compares: "220,220,220", searches: "151,187,205" }%>
  statistics_data = {
    labels: <%= raw(statistics[:labels]) %>,
    datasets: [
      {
        fillColor: "rgba(<%= colors[:compares] %>,0.5)",
        strokeColor: "rgba(<%= colors[:compares] %>,1)",
        pointColor: "rgba(<%= colors[:compares] %>,1)",
        pointStrokeColor: "#fff",
        data: <%= statistics[:compares] %>
      }, {
        fillColor: "rgba(<%= colors[:searches] %>,0.5)",
        strokeColor: "rgba(<%= colors[:searches] %>,1)",
        pointColor: "rgba(<%= colors[:searches] %>,1)",
        pointStrokeColor: "#fff",
        data: <%= statistics[:searches] %>
      }
    ]
  };


</script>
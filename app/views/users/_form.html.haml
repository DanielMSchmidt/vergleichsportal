.div{:id => "register-form"}
  = simple_form_for(@user_new, remote: true) do |f|

    .form-inputs
      = f.input :email
      = f.input :password
      = f.input :password_confirmation

    .form-actions
      = f.button :submit, (t "users.create_user")

    %a{href: new_password_reset_path}
      = (t "users.reset_passwort")
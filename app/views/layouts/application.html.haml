%html{:lang => "de"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}/
    / Uncomment to make IE8 render like IE7
    / <meta http-equiv="X-UA-Compatible" content="IE=7" />
    / Set the viewport width to device width for mobile
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Untitled"
    = stylesheet_link_tag "application"
    = javascript_include_tag "vendor/custom.modernizr"
    = csrf_meta_tags
  %body
    = render "layouts/navigation"

    .three.columns
      %p
        %a.button.expand{"data-reveal-id" => "cart-modal", :href => "#", :style => "background-image: url(images/cart.png); background-repeat: no-repeat; height: 37.65625px; background-position: 84px 7px;"}
    .three.columns
      %p
        %img{:src => "http://placehold.it/205x720&text=Werbung"}/    
    .row
      .nine.columns
        = yield

    = yield :modal
    = javascript_include_tag "application"

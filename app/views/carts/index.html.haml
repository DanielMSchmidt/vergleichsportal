%h1 Listing carts

%table
  %tr
    %th User
    %th
    %th
    %th

  - @carts.each do |cart|
    %tr
      %td= cart.user_id
      %td
        = link_to (t "general.use_text"), use_cart_path(cart) unless cart == @active_cart
      %td= link_to (t "general.delete_text"), cart, :method => :delete, :data => { :confirm => (t "general.confirm_text") }

%br

= link_to (t "carts.new_cart"), new_cart_path
